<%= simple_form_for(@customer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :first_name %>
    <%= f.input :mobile %>

    <%= f.input :picture, :as => :image_preview %>

    <%= f.input :picture, as: :attachment_preview %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
